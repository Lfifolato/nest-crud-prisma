generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model livros {
  id        String   @id @default(uuid())
  name      String
  type      String
  status    Boolean
  price     Decimal  @db.Money
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([status])
  @@map("tb_libro")
}
